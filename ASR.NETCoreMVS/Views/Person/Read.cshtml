<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div>
        <text class="text-info">Таблица Person</text>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Очество</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var person in Model)
                    {
                        <tr>
                            <td>@person.Id</td>
                            <td>@person.LastName</td>
                            <td>@person.FirstName</td>
                            <td>@person.MiddleName</td>
                        </tr>
                    }

                }
                else
                {
                    <tr>
                        <td class="text-center" colspan="5">Пустой</td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary" asp-area="" asp-controller="Person" asp-action="Create">Добавить человек</a>
        <a class="btn btn-primary" asp-area="" asp-controller="Person" asp-action="Scan">Поиск человека по ФИО</a>
        <a class="btn btn-primary" asp-area="" asp-controller="Person" asp-action="ScanById">Поиск человека по Id</a>

    </div>
</body>
</html>
